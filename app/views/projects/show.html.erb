                          <div class="icon icon-shape bg-white text-primary shadow">
                            <i class="fe fe-line-chart"></i>
                          </div>
                        </div>
                        <div class="pl-3">
                          <h6 class="text-muted text-xs font-weight-light mb-0">Un montant total levé de</h6>
                          <span class="h6 font-weight-bolder mb-0"><%= @project.money_earned %>€</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="d-flex align-items-center mx-5 mb-3">
                <div class="w-80">
                  <div class="progress progress-sm shadow-none">
                    <div class="progress-bar bg-success" role="progressbar" style=<%="width:#{@project.money_earned *  100 / @project.value_of_project}%"%> aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
