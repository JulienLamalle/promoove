<!-- Project -->
<section class="slice py-5 bg-section-fade">
  <div class="container">

      <!-- Video Player -->
      <div class="embed-responsive embed-responsive-16by9" style="border-radius:10px">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/dQw4w9WgXcQ" allowfullscreen></iframe>
      </div>
      <!---->

      <div class="row mt-5">
        <div class="col-xl-8 col-lg-12 col-md-12 col-12 mb-4 mb-xl-0">
          <div class="card rounded-lg p-1">
            <!-- Card body -->
            <div class="card-body">
              <div>
                <div class="tab-pane fade active show" role="tabpanel" aria-labelledby="description-tab">
                  <div class="d-flex">
                    <%= image_tag "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse1.mm.bing.net%2Fth%3Fid%3DOIP.qGsS32Tn5mqZx5fVIBxtSAAAAA%26pid%3DApi&f=1", class: "avatar avatar-lg mr-4 mt-3" %>
                    <h2 class="text-md-left mt-4">
                      <%= @project.name %>
                    </h2>
                    <div class="shadow-sm ml-auto">
                      <div class="p-4 mx-2 text-sm-left">
                        <h6 class="mb-0">
                          <i class="fe fe-drop-up mr-1"></i>
                          <span class="counter" data-from="0" data-to=<%= @project.project_upvotes_count %> data-speed="1000" data-refresh-interval="200"></span>
                        </h6>
                      </div>
                    </div>      
                  </div>
                  <% %>
                  <div class="d-flex flex-wrap mt-3">
                    <% @categories&.each do |category| %>
                      <%= link_to category.name, category_path(category), class: "badge badge-soft-primary badge-pill mx-2"%>
                    <% end%>
                  </div>
                  <hr class="divider divider-fade mt-3" />
                  <div id="description" class="mb-5">
                    <h4 class="mb-2">Description</h4>
                    <p>
                      <%= @project.short_description %>
                    </p>
                    <h4 class="mb-2 mt-3">Fonctionnalit√©s</h4>
                    <p>
                      <%= @project.long_description %>
                    </p>
                    <div class="d-flex flex-wrap mt-4">
                      <% @languages&.each do |language| %>
                        <%= link_to language_path(language), class: "small d-inline", title: language.name do %>
                          <%= image_tag language.picture_url, style: "width: 25px; position: relative; top: -2px", class: "mr-1"%>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                  <hr />
                  <div class="row d-flex">
                    <%= link_to @project.link_of_github, type: "button", class: "btn btn-icon-label mx-2" do %>
                      <span class="btn-inner--icon">
                        <i class="fe fe-code"></i>
                      </span>
                      <span class="btn-inner--text">Code source</span>
                    <% end %>
                    <button type="button" class="btn btn-twitter btn-icon-label mx-2">
                      <span class="btn-inner--icon">
                        <i class="fe fe-twitter"></i>
                      </span>
                      <span class="btn-inner--text">Twitter</span>
                    </button>
                    <button type="button" class="btn btn-facebook btn-icon-label mx-2">
                      <span class="btn-inner--icon">
                        <i class="fe fe-facebook"></i>
                      </span>
                      <span class="btn-inner--text">Facebook</span>
                    </button>
                  </div>  
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-4 col-lg-12 col-md-12 col-12">
          <div class="row d-flex justify-content-center">
            <button type="button" class="btn btn-animated btn-primary btn-animated-x mx-3">
                <span class="btn-inner--visible">Soutenir</span>
                <span class="btn-inner--hidden">
                    <i class="fe fe-heart"></i>
                </span>
            </button>
            <button type="button" class="btn btn-soft-success mx-3">
              <i class="fe fe-drop-up"></i>
            </button>
          </div>
          
          <div class="col-md-6 col-lg flex-lg-fill mt-3">
            <div class="card">
