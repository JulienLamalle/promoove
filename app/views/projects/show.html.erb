                <span class="h6">
                  Collaborateurs
                </span>
              </div>
              <div class="card-body py-3">
                <div class="row mx-n1">
                  <% @collaborators.first(10).each do |collaborator| %>
                    <div class="col-auto text-center my-1 px-1">
                      <%= link_to user_path(collaborator), class: "avatar rounded-circle hover-scale-105", title: "#{collaborator.first_name} #{collaborator.last_name}" do %>
                        <%if collaborator.profile_picture.attached?%>
                          <%= image_tag collaborator.profile_picture, alt:"profile picture", class:"avatar rounded-circle" %>
                        <% else %>
                          <%= image_tag "https://www.flaticon.com/svg/vstatic/svg/3442/3442087.svg?token=exp=1617099360~hmac=9162ab297fb8e99726e17b95534cacbb" , alt:"profile picture", class:"avatar rounded-circle" %>
                        <% end%>
                      <% end %>
                    </div>
                  <% end %>
                  <% if @collaborators.size > 10 %>
                    <div class="col-auto text-center my-1 px-1">
                      <%= link_to "+#{@collaborators.size - 10}","#", class: "avatar bg-primary text-white rounded-circle border border-lg border-soft-primary hover-scale-105" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
