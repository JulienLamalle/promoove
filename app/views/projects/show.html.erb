                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <%= image_tag "https://images.unsplash.com/photo-1573804633927-bfcbcd909acd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1399&q=80", class: "d-block w-100 myImg" %>
                </div>
                <div class="carousel-item">
                  <%= image_tag "https://images.unsplash.com/photo-1594663653925-365bcbf7ef86?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80", class: "d-block w-100 myImg" %>
                </div>
                <div class="carousel-item">
                  <%= image_tag "https://images.unsplash.com/photo-1592179900427-1631dd95b04a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1474&q=80", class: "d-block w-100 myImg" %>
                </div>
              </div>
              <%= link_to "#carousel", class: "carousel-control-prev", role: "button", data: { slide: "prev" } do %>
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              <% end %>
              <%= link_to "#carousel", class: "carousel-control-next", role: "button", data: { slide: "next" } do %>
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              <% end %>
            </div>
