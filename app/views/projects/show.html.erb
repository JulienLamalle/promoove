<!-- Project -->
<section class="slice py-5 bg-section-fade">
  <div class="container">

      <!-- Video Player -->
      <div class="embed-responsive embed-responsive-16by9" style="border-radius:20px">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/dQw4w9WgXcQ" allowfullscreen></iframe>
      </div>
      <!---->

      <div class="row mt-5">
        <div class="col-xl-8 col-lg-12 col-md-12 col-12 mb-4 mb-xl-0">
          <div class="card rounded-lg p-1">
            <!-- Card body -->
            <div class="card-body">
              <div>
                <div class="tab-pane fade active show" role="tabpanel" aria-labelledby="description-tab">
                  <div class="d-flex">
                    <%= image_tag "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse1.mm.bing.net%2Fth%3Fid%3DOIP.qGsS32Tn5mqZx5fVIBxtSAAAAA%26pid%3DApi&f=1", class: "avatar avatar-lg mr-4" %>
                    <h2 class="text-center text-md-left">
                      <%= @project.name %>
                    </h2>
                  </div>
                  <div class="d-flex flex-wrap mt-2">
                    <% @categories&.each do |category| %>
                      <%= link_to "#{category.name}", category_path(category), class: "badge badge-soft-primary badge-pill mx-2"%>
                    <% end%>
                  </div>
                  <hr class="divider divider-fade"/>
                  <div id="description" class="mb-5">
                    <h4 class="mb-2">Description</h4>
                    <p>
                      <%= @project.short_description %>
                    </p>
                    <h4 class="mb-2 mt-3">Fonctionnalités</h4>
                    <p>
                      <%= @project.long_description %>
                    </p>
                    <h4 class="mb-2">Languages</h4>
                    <div class="d-flex flex-wrap mb-3">
                      <% @languages&.each do |language| %>
                        <%= link_to "#{language.name}", language_path(language), class: "badge badge-soft-primary badge-pill mx-2"%>
                      <% end%>
                    </div>
                  </div>
                  <hr />
                  <div class="row d-flex">
                    <%= link_to "#{@project.link_of_github}", type: "button", class: "btn btn-icon-label mx-2" do %>
                      <span class="btn-inner--icon">
                        <i class="fe fe-code"></i>
                      </span>
                      <span class="btn-inner--text">Code source</span>
                    <% end %>
                    <button type="button" class="btn btn-twitter btn-icon-label mx-2">
                      <span class="btn-inner--icon">
                        <i class="fe fe-twitter"></i>
                      </span>
                      <span class="btn-inner--text">Twitter</span>
                    </button>
                    <button type="button" class="btn btn-facebook btn-icon-label mx-2">
                      <span class="btn-inner--icon">
                        <i class="fe fe-facebook"></i>
                      </span>
                      <span class="btn-inner--text">Facebook</span>
                    </button>
                  </div>  
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-4 col-lg-12 col-md-12 col-12">
          <div class="row d-flex justify-content-center">
            <button type="button" class="btn btn-animated btn-primary btn-animated-x mx-3">
                <span class="btn-inner--visible">Soutenir</span>
                <span class="btn-inner--hidden">
                    <i class="fe fe-heart"></i>
                </span>
            </button>
            <button type="button" class="btn btn-animated btn-soft-success btn-animated-y mx-3">
              <span class="btn-inner--visible">Voter</span>
                <span class="btn-inner--hidden">
                    <i class="fe fe-arrow-up"></i>
                </span>
            </button>
          </div>
          
          <div class="col-md-6 col-lg flex-lg-fill mt-3">
            <div class="card">
              <div class="card-header">
                <span class="h6">
                  Collaborateurs
                </span>
              </div>
              <div class="card-body py-3">
                <div class="row mx-n1">
                  <% @collaborators.first(10).each do |collaborator| %>
                    <div class="col-auto text-center my-1 px-1">
                      <%= link_to user_path(collaborator), class: "avatar rounded-circle hover-scale-105", title: "#{collaborator.first_name} #{collaborator.last_name}" do %>
                        <%= image_tag "https://images.unsplash.com/photo-1586297135537-94bc9ba060aa?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MzN8fGF2YXRhcnxlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" %>
                      <% end %>
                    </div>
                  <% end %>
                  <% if @collaborators.size > 10 %>
                    <div class="col-auto text-center my-1 px-1">
                      <%= link_to "+#{@collaborators.size - 10}","#", class: "avatar bg-primary text-white rounded-circle border border-lg border-soft-primary hover-scale-105" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <!-- Carousel -->
            <div id="carousel" class="carousel slide mx-auto mt-5" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <%= image_tag "https://images.unsplash.com/photo-1573804633927-bfcbcd909acd?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1399&q=80", class: "d-block w-100 myImg" %>
                </div>
                <div class="carousel-item">
                  <%= image_tag "https://images.unsplash.com/photo-1594663653925-365bcbf7ef86?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80", class: "d-block w-100 myImg" %>
                </div>
                <div class="carousel-item">
                  <%= image_tag "https://images.unsplash.com/photo-1592179900427-1631dd95b04a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1474&q=80", class: "d-block w-100 myImg" %>
                </div>
              </div>
              <%= link_to "#carousel", class: "carousel-control-prev", role: "button", data: { slide: "prev" } do %>
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              <% end %>
              <%= link_to "#carousel", class: "carousel-control-next", role: "button", data: { slide: "next" } do %>
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              <% end %>
            </div>
            <!---->
            <!-- The Modal -->
            <div id="myModal" class="modal">

              <!-- The Close Button -->
              <span class="close">&times;</span>

              <!-- Modal Content (The Image) -->
              <%= image_tag "", class: "modal-content", id: "modal-img" %>

              <!-- Modal Caption (Image Text) -->
              <div id="caption"></div>
            </div>
          </div>
        </div>
      </div>
      <hr class="divider divider-fade"/>

