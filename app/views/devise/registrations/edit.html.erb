<section class="pt-5 bg-section-secondary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-9">
        <div class="row align-items-center">
          <div class="col">
            <!-- Surtitle -->
            <span class="surtitle">Editez votre compte</span>
            <!-- Title -->
            <h1 class="h2 mb-0">
              Modifiez vos informations
            </h1>
          </div>
        </div>
        <div class="row align-items-center mt-4">
          <div class="col">
            <ul class="nav nav-tabs overflow-x">
              <li class="nav-item">
                <%= link_to 'Profil', user_path(current_user.id), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Editer mon profil', edit_user_registration_path, class: 'nav-link active' %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="slice slice-sm bg-section-secondary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-9">
        <div class="row">
          <div class="col-lg-12">
            <div>
              <!-- Title -->
              <h5 class="mb-3">Informations Générales</h5>
              <!-- Form -->
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <!-- General information -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre adresse mail", class: "form-control-label" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", type: 'text', placeholder: 'Entrez votre email' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre mot de passe actuel", class: "form-control-label" %> <i class="text-sm ml-1">(Obligatoire)</i><br />
                      <%= f.password_field :current_password, class:"form-control", placeholder: 'Entrez votre mot de passe actuel' %>
                    </div>
                  </div>
                </div>
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre mot de passe", class: "form-control-label"  %><br />
                      <%= f.password_field :password, class:"form-control", type: 'password', placeholder: 'Entrez votre nouveau mot de passe' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre confirmation de mot de passe", class: "form-control-label"  %><br />
                      <%= f.password_field :password_confirmation, class:"form-control", type: 'password', placeholder: 'Entrez la confirmation de votre mot de passe' %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre prénom", class: "form-control-label"  %><br />
                      <%= f.text_field :first_name, autocomplete: "first_name", class:"form-control", type: 'text', placeholder: 'Entrez votre prénom', value: current_user.first_name %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre nom", class: "form-control-label"  %><br />
                      <%= f.text_field :last_name, autocomplete: "last_name", class:"form-control", type: 'text', placeholder: 'Entrez votre nom', value: current_user.last_name  %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre profil Github", class: "form-control-label"  %><br />
                      <%= f.text_field :github_link, autocomplete: "github_link", class:"form-control", type: 'text', placeholder: 'Entrez le lien de votre compte Github', value: current_user.github_link %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre profil Gitlab", class: "form-control-label"  %><br />
                      <%= f.password_field :gitlab_link, autocomplete: "gitlab_link", class:"form-control", type: 'text', placeholder: 'Entrez le lien de votre compte Gitlab', value: current_user.gitlab_link %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre profil Twitter", class: "form-control-label"  %><br />
                      <%= f.text_field :twitter_link, autocomplete: "twitter_link", class:"form-control", type: 'text', placeholder: 'Entrez le lien de votre compte Twitter', value: current_user.twitter_link %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label "Votre profil Linkedin", class: "form-control-label"  %><br />
                      <%= f.password_field :linkedin_link, autocomplete: "linkedin_link", class:"form-control", type: 'text', placeholder: 'Entrez le lien de votre compte LinkedIn', value: current_user.linkedin_link %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                    <%= f.label "Votre description", class: "form-control-label"  %><br />
                      <%= f.text_area :description, autocomplete: "description", class:"form-control", type: 'text', placeholder: 'Dites nous en plus sur vous et permettez aux autres de vous découvrir'%>
                    </div>
                  </div>
                </div>
                <h5 class="mt-2">Votre parcours professionnel</h5>
                <p class="mb-4">Dites nous en plus sur vous et votre parcours professionnel</p>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.text_area :professional_background, autocomplete: "professional_background", class:"form-control", type: 'text', placeholder: 'Dites nous en plus sur votre parcours et permettez aux autres de vous proposer des opportunités'%>
                    </div>
                  </div>
                </div>
                <!-- Buttons -->
                <div class="mt-3">
                  <%= f.submit "Mettre à jour mon profil", class: "btn btn-sm btn-primary" %>
                </div>
              <% end %>
            </div>
            <hr />
            <!-- Delete account -->
            <div>
              <div class="page-inner-header mb-4">
                <h5 class="mb-1">Supprimer votre compte</h5>
                <p class="text-muted mb-0">
                  Une fois votre compte supprimé, vous ne pourrez plus revenir en arrière.
                </p>
              </div>
              <div class="row">
                <div class="col-md-8">
                  <%= link_to 'Supprimer mon compte', '#', data: {target: "#modal_account_desactivate", toggle:"modal"}, class: "btn btn-sm btn-danger" %>
                </div>
              </div>
              <div class="modal fade" id="modal_account_desactivate" tabindex="-1" role="dialog"
                aria-labelledby="modal_account_deactivate" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-body">
                      <div class="pt-5 text-center">
                        <div class="icon text-danger">
                          <i class="fe fe-cry"></i>
                        </div>
                        <h4 class="h5 mt-2 mb-3">Attention !</h4>
                        <p>
                          Nous allons immédiatement supprimer votre compte et toutes les données y étant liées de notre base de données, êtes-vous sûr de vouloir faire cela ?
                        </p>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <%= link_to "Supprimer mon compte", registration_path(resource_name), method: :delete, class: "btn btn-sm btn-link text-danger btn-zoom--hover font-weight-600" %>
                      <%= button_to "Annuler", edit_user_registration_path(current_user), class: "btn btn-sm btn-secondary", data: {dismiss: "modal"}%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>