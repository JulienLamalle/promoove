<section>
  <div
    class="bg-primary position-absolute h-100 top-0 left-0 zindex-100 col-lg-6 col-xl-6 zindex-100 d-none d-lg-flex flex-column justify-content-end"
    data-bg-size="cover" data-bg-position="center">
    <!-- Cover image -->
    <%= image_tag "backgrounds/signup.jpeg",  alt: "image cover", class: "img-as-bg" %>
    <!-- Overlay text -->
    <div class="row position-relative zindex-110 p-5">
      <div class="col-md-8 text-center mx-auto">
        <span class="badge badge-danger badge-pill">Partager - Créer - Aider</span>
        <h5 class="h5 text-white mt-3">Les meilleurs projets open-source vous attendent</h5>
        <p class="text-white opacity-8">
          Créez votre compt et participez vous aussi à l'open-source
        </p>
      </div>
    </div>
  </div>
  <div class="container-fluid d-flex flex-column">
    <div class="row align-items-center justify-content-center justify-content-lg-end min-vh-100">
      <div class="col-sm-7 col-lg-6 col-xl-6 py-6 py-lg-0">
        <div class="row justify-content-center">
          <div class="col-11 col-lg-10 col-xl-7">
            <div>
              <div class="mb-5">
                <h6 class="h3 mb-1">Créez votre compte !</h6>
                <p class="text-muted mb-0">Créez votre compte et rejoignez la communauté de l'open source !</p>
              </div>
              <span class="clearfix"></span>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="form-group">
                  <%= f.label "Votre adresse mail", class:"form-control-label" %>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fe fe-user"></i></span>
                    </div>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", class: "form-control", id:"input-email", placeholder: "votre@email.com" %>
                  </div>
                </div>
                <div class="form-group mb-3">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <%= f.label "Votre mot de passe", class: "form-control-label" %>
                    </div>
                  </div>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fe fe-key"></i></span>
                    </div>
                    <%= f.password_field :password, autocomplete: "current-password", type: "password", class: "form-control", id: "input-password", placeholder: "Votre mot de passe" %>
                  </div>
                </div>
                <div class="form-group mb-0">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <%= f.label "Votre confirmation de mot de passe", class: "form-control-label" %>
                    </div>
                  </div>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fe fe-key"></i></span>
                    </div>
                    <%= f.password_field :password_confirmation, autocomplete: "current-password", type: "password", class: "form-control", id: "input-password-confirmation", placeholder: "Votre confirmation de mot de passe" %>
                  </div>
                </div>
                <div class="my-4">
                  <div class="custom-control custom-checkbox mb-3">
                    <%= f.check_box :terms, class: "custom-control-input", id: "check-terms" %>
                    <%= f.label " ", class:"custom-control-label", for:"check-terms" %>J'accepte <%= link_to "les conditions d'utilisations", terms_path  %>
                  </div>
                </div>
                <div class="mt-4 actions">
                  <%= f.submit "Créez votre compte", class: "btn btn-block btn-primary" %>
                </div>
              <% end %>
              <div class="py-3 text-center">
                <span class="text-xs text-uppercase">ou</span>
              </div>
              <!-- Alternative login -->
              <div class="row">
                <div class="col-sm-12">
                  <%= link_to user_github_omniauth_authorize_path, method: :post , class: "btn btn-block btn-neutral btn-icon mb-3 mb-sm-0" do %>
                    <span class="btn-inner--icon"><%= image_tag "svg/social/github.svg",
                        alt: "Image Github"%></span>
                    <span class="btn-inner--text">Créez votre compte avec Github</span>
                  <% end %>
                </div>
              </div>
              <!-- Links -->
              <div class="mt-4"><small>Vous avez déjà un compte ?</small>
                <%= link_to "Se connecter", new_user_session_path ,class:"small font-weight-bold"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>