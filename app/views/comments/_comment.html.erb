<div class="media media-comment my-4">
  <%if comment.user.profile_picture.attached?%>
    <%= image_tag comment.user.profile_picture, alt:"profile picture", class:"avatar avatar-lg rounded-circle mr-3" %>
  <% else %>
    <%= image_tag "https://images.unsplash.com/photo-1599508704512-2f19efd1e35f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=675&q=80" , alt:"profile picture", class:"avatar avatar-lg rounded-circle mr-3" %>
  <% end%>
  <div class="media-body">
    <div class="media-comment-bubble left-top">
      <h6 class="mt-0"><%= "#{comment.user.first_name && comment.user.first_name} #{comment.user.last_name && comment.user.last_name}" %></h6>
      <p class="text-sm lh-160"><%= comment.content %></p>
      <div class="icon-actions">
        <%= link_to "#", class: "love active" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
          </svg> 
          <span class="text-muted">10 likes</span> 
        <% end %>
        <div class="display_answers" id=<%="#{comment.id}"%> style="cursor:pointer">
          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
          </svg> 
          <span class="text-muted"><%= comment.comment_answers.size %> rÃ©ponses</span>
        </div>
      </div>
    </div>
  </div>
</div>