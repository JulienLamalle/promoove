<% if !@comment.is_liked %>
  <%= link_to project_comment_upvotes_path(project_id: @project.id, user_id: current_user.id, comment_id: @comment.id), :method => :post, class: "love" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    </svg> 
    <span class="text-muted"><%= @comment.comment_upvotes.size %></span> 
  <% end %>
<% else %>
  <%= link_to project_comment_upvote_path(@comment.comment_upvotes.find_by(user: current_user), comment_upvote_id: @comment.comment_upvotes.find_by(user: current_user).id), :method => :delete, class: "love active" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    </svg> 
    <span class="text-muted"><%= @comment.comment_upvotes.size %></span> 
  <% end %>
<% end %>